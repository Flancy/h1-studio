.services
	.services-img
		margin 0 auto -30px
		max-width 150px
		height auto
		max-height 159px
	.card
		width 100%
		position relative
		align-items center
	.card-tooltip
		position absolute
		width 22px
		height 22px
		right 15px
		top 15px
		color #967ADC
		font-size 14px
		border-radius 50%
		border 1px solid #967ADC
		transition all 0.3s ease-in-out
		&:hover, &:active 
			background-color #967ADC
			color #fff
			text-decoration none
	.card-body
		width 100%
	.card-title
		font-size 1.15rem
	.btn
		width 100%
	.card-detail
		.btn
			width auto